{
  "name": "tslane",
  "version": "1.0.0",
  "description": "A template for creating TypeScript libraries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "bundle": "npx webpack --config-name=production",
    "bundle:all": "npx webpack",
    "bundle:map": "npx webpack --config-name=map",
    "coverage": "npx jest --collectCoverage",
    "doc": "typedoc --out docs src",
    "format": "npx prettier --parser typescript --write ./src ./tests",
    "lint": "npx eslint . --ext .ts",
    "test": "npx jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  }
}
